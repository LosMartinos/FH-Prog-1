<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import com.jfoenix.controls.JFXListView?>

<VBox prefWidth="820.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.ac.fhcampuswien.fhmdb.controllers.HomeViewController">
   <children>
      <HBox alignment="CENTER" prefHeight="60" spacing="5.0">
         <children>
            <Button fx:id="sortBtn" mnemonicParsing="false" onAction="#sortBtnClicked" style="-fx-background-color: #f5c518;" text="Sort" />
            <TextField fx:id="searchField" promptText="Search FHMDb..." />
            <ComboBox fx:id="genreComboBox" prefWidth="150.0" promptText="Select genre" style="-fx-background-color: #ffffff;" />
            <ComboBox fx:id="releaseYearComboBox" prefWidth="150.0" promptText="Select year" style="-fx-background-color: #ffffff;" />
            <ComboBox fx:id="ratingComboBox" prefWidth="150.0" promptText="Select rating" style="-fx-background-color: #ffffff;" />
            <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#searchBtnClicked" style="-fx-background-color: #f5c518;" text="Filter" />
         </children>
      </HBox>
   </children>
   <JFXListView fx:id="movieListView" style="-fx-background-color: #000000;" VBox.vgrow="ALWAYS" />
</VBox>
